void libapx_camera_init()
{
	int i = 1;
	fixed val;

	while( i < libapx_MAX_PLAYERS ) {
		if(PlayerStatus(i) == c_playerStatusActive) {
			cam[i] = CameraInfoDefault();
			libapx_camera_reset(i);
		}
		i += 1;
	}
}


