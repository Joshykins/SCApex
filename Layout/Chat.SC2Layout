			<RenderPriority val="2"/>
			<DisabledAlpha val="0"/>
			<Anchor side="Left" relative="$parent" pos="Min" offset="-100"/>
			<Anchor side="Right" relative="$parent" pos="Max" offset="100"/>
			<Anchor side="Top" relative="$parent" pos="Min" offset="-100"/>
